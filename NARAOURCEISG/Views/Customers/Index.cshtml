@model IEnumerable<NARAOURCEISG.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="card">
        <div class="card-header row">
            <h1 class="card-text col-md-12">Clientes</h1>
        </div>
        <div class="card-body row">
            <p class="col-md-12">
                <a class="btn btn-primary" style="width:100%;" asp-action="Create">Crear Cliente</a>
            </p>

            <div class="table-responsive col-md-12">
                <table class="table table-striped table-hover table-secondary">
                    <thead>
                        <tr>
                            <th>
                                @* @Html.DisplayNameFor(model => model.FirstName) *@
                                <label for="">Primer Nombre</label>
                            </th>
                            <th>
                                @* @Html.DisplayNameFor(model => model.LastName) *@
                                <label for="">Apellido</label>
                            </th>
                            <th>
                                @* @Html.DisplayNameFor(model => model.Email) *@
                                <label for="">Correo</label>
                            </th>
                            <th>
                                @* @Html.DisplayNameFor(model => model.Phone) *@
                                <label for="">Telefono</label>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    <table>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>

                                        </td>
                                        <td>
                                            <a class ="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalle</a>

                                        </td>
                                        <td>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>

                                        </td>
                                        
                                    </table>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>