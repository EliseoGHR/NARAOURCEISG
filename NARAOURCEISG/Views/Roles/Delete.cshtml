@model NARAOURCEISG.Models.Role

@{
    ViewData["Title"] = "Delete";
}

<div class="row" style="margin-top:100px;">
    <div class="card">
        <div class="card-header row">
            <h1 class="card-text">Eliminar Rol</h1>
        </div>
        <div class="card-body row">
            <dl class="row col-md-12">
                <div class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </div>
                <div class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </div>
            </dl>

            <form asp-action="Delete" class="col-md-12 row">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-6" style="margin-top:10px;">
                    <input style="width:100%;" type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <a style="width:100%;" class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>


</div>