@model NARAOURCEISG.Models.Role

@{
    ViewData["Title"] = "Details";
}

<div class="row" style="padding-top:100px;">
    <div class="card">
        <div class="card-header row">
            <h1>Detalles de Roles</h1>
        </div>
        <div class="card-body row">
            <dl class="row col-md-12">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
            <div class="col-md-6">
                <a class="btn btn-primary" style="width:100%;" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
            </div>
            <div class="col-md-6">
                <a class="btn btn-secondary" style="width:100%;" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </div>

</div>