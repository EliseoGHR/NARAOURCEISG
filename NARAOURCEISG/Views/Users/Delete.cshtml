@model NARAOURCEISG.Models.User

@{
    ViewData["Title"] = "Delete";
}


<div class="row">
    <div class="card">
        <div class="card-header row">
            <h1 class="card-text">Eliminar Usuario</h1>
        </div>
        <div class="card-body row">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayName("USUARIO")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayName("PASSWORD")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Password)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayName("EMAIL")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayName("ESTADO")
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Status == 1)
                    {
                        <span>Activo</span>
                    }
                    else
                    {
                        <span>Inactivo</span>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayName("IMAGEN")
                </dt>
                <dd class="col-sm-10">
                    @{
                        string urlBase64 = "";
                        if (Model.Image != null && Model.Image.Length > 0)
                        {
                            string base64String = Convert.ToBase64String(Model.Image);
                            urlBase64 = "data:image/jpeg;base64," + base64String;
                        }
                    }
                    @if (urlBase64.Trim().Length > 0)
                    {
                        <img id="imagenPrevia" src="@urlBase64" alt="Vista previa de la imagen" style="max-width: 200px; max-height: 200px;">
                    }
                    else
                    {
                        <img id="imagenPrevia" src="~/img/default.jpg" alt="Vista previa de la imagen" style="max-width: 200px; max-height: 200px;">
                    }
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayName("ROL")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Role.Name)
                </dd>
                </dd>
            </dl>

            <form asp-action="Delete" class="col-md-12 row">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-6" style="margin-top:10px;">
                    <input style="width:100%;" type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <a style="width:100%;" class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>


</div>
